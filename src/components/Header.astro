---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header class="site-header">
	<div class="container nav-bar">
		<a class="brand" href="/">
			<span class="brand-mark">Q</span>
			<span class="brand-meta">
				<span class="brand-title">{SITE_TITLE}</span>
				<span class="brand-subtitle">Zhonghan Qin</span>
			</span>
		</a>
		<nav class="nav-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/photography">Photography</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
		</nav>
		<div class="nav-actions">
			<a class="button secondary" href="/#tools">Toolbox</a>
		</div>
	</div>
</header>

<style>
	.site-header {
		position: sticky;
		z-index: 20;
		top: 0;
		backdrop-filter: blur(14px);
		background: rgba(255, 255, 255, 0.8);
		border-bottom: 1px solid rgba(99, 102, 241, 0.08);
	}

	.nav-bar {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		padding: 1.6rem 2rem;
	}

	.brand {
		display: inline-flex;
		align-items: center;
		gap: 1.2rem;
		text-decoration: none;
	}

	.brand-mark {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 3.6rem;
		height: 3.6rem;
		border-radius: 12px;
		background: var(--accent);
		color: #fff;
		font-weight: 700;
		font-size: 1.8rem;
		box-shadow: var(--shadow-md);
	}

	.brand-meta {
		display: flex;
		flex-direction: column;
		gap: 0.3rem;
	}

	.brand-title {
		font-size: 1.7rem;
		font-weight: 700;
		color: var(--text-primary);
	}

	.brand-subtitle {
		font-size: 1.3rem;
		color: var(--text-tertiary);
	}

	.nav-links {
		display: inline-flex;
		align-items: center;
		gap: 1.2rem;
	}

	.nav-links a {
		position: relative;
		font-size: 1.5rem;
		font-weight: 600;
		padding: 0.8rem 1rem;
		color: var(--text-secondary);
		border-radius: 999px;
		transition: background 0.2s ease, color 0.2s ease;
	}

	.nav-links a:hover,
	.nav-links a.active {
		color: var(--accent-strong);
		background: var(--accent-soft);
	}

	.nav-actions {
		display: inline-flex;
	}

	@media (max-width: 900px) {
		.nav-bar {
			flex-wrap: wrap;
			justify-content: center;
			text-align: center;
		}

		.nav-actions {
			width: 100%;
			justify-content: center;
		}
	}

	@media (max-width: 600px) {
		.nav-links {
			flex-wrap: wrap;
			justify-content: center;
		}
	}
</style>
