---
import { PROFILE } from '../data/profile';

const year = new Date().getFullYear();
---

<footer class="site-footer">
	<div class="container footer-shell">
		<div class="footer-brand">
			<div class="footer-mark">Y</div>
			<div>
				<h3>{PROFILE.name}</h3>
				<p>{PROFILE.tagline}</p>
			</div>
		</div>
		<div class="footer-columns">
			<div>
				<h4>Quick links</h4>
				<ul>
					<li><a href="/">Home</a></li>
					<li><a href="/photography">Photography</a></li>
					<li><a href="/blog">Blog</a></li>
				</ul>
			</div>
			<div>
				<h4>Contact</h4>
				<ul>
					<li>{PROFILE.location}</li>
					<li><a href={`mailto:${PROFILE.email}`}>{PROFILE.email}</a></li>
				</ul>
			</div>
			<div>
				<h4>Social</h4>
				<ul>
					{
						PROFILE.socials.map((item) => (
							<li>
								<a href={item.href} target="_blank">{item.name}</a>
							</li>
						))
					}
				</ul>
			</div>
		</div>
	</div>
	<div class="footer-bottom">
		<div class="container bottom-wrap">
			<span>© {year} {PROFILE.name}. All rights reserved.</span>
			<span class="muted">Made with Astro · Hosted on GitHub Pages</span>
		</div>
	</div>
</footer>

<style>
	.site-footer {
		margin-top: 6rem;
		background: linear-gradient(180deg, rgba(79, 70, 229, 0.08) 0%, rgba(79, 70, 229, 0.02) 100%);
		border-top: 1px solid rgba(99, 102, 241, 0.16);
	}

	.footer-shell {
		display: flex;
		flex-wrap: wrap;
		gap: 3.2rem;
		padding: 4rem 2rem;
		justify-content: space-between;
	}

	.footer-brand {
		display: flex;
		gap: 1.6rem;
		align-items: center;
		max-width: 320px;
	}

	.footer-mark {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		width: 4.8rem;
		height: 4.8rem;
		border-radius: 16px;
		background: var(--accent);
		color: #fff;
		font-weight: 700;
		font-size: 2rem;
		box-shadow: var(--shadow-md);
	}

	.footer-brand h3 {
		margin: 0;
		font-size: 1.9rem;
	}

	.footer-brand p {
		margin: 0.4rem 0 0;
		color: var(--text-tertiary);
	}

	.footer-columns {
		display: grid;
		gap: 2.4rem;
		grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
	}

	.footer-columns h4 {
		margin: 0 0 1rem;
		font-size: 1.6rem;
	}

	.footer-columns ul {
		margin: 0;
		padding: 0;
		list-style: none;
		display: grid;
		gap: 0.6rem;
	}

	.footer-columns a {
		color: var(--text-secondary);
	}

	.footer-columns a:hover {
		color: var(--accent-strong);
	}

	.footer-bottom {
		border-top: 1px solid rgba(99, 102, 241, 0.12);
		padding: 1.6rem 0;
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(6px);
	}

	.bottom-wrap {
		display: flex;
		justify-content: space-between;
		font-size: 1.3rem;
		gap: 1.6rem;
		color: var(--text-tertiary);
		padding: 0 2rem;
	}

	@media (max-width: 720px) {
		.footer-shell {
			flex-direction: column;
			align-items: flex-start;
		}

		.bottom-wrap {
			flex-direction: column;
			align-items: flex-start;
		}
	}
</style>
